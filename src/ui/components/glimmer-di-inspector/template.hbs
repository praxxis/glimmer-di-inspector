<div class="app">
  <h1>Glimmer DI Inspector</h1>
  <section>
    <div class="input-area">
      <p>Enter a file path to see the generated specifier.</p>
      <input type="text" value="{{filePath}}" oninput={{action onFilePathChange}}>
    </div>
    <div class="examples {{examplesClass}}" onclick={{action toggleExamples}}>
      <h3>{{#if showExamples}}Hide{{else}}Show{{/if}} Examples</h3>
      <p>
        src/ui/components/glimmer-analyzer/template.hbs<br>
        src/ui/components/glimmer-analyzer/component.ts<br>
        src/ui/components/glimmer-analyzer/input-field/style.css<br>
        packages/ui-controls/src/ui/components/ui-button.hbs<br>
      </p>
    </div>
  </section>
  <section>
    <h2>Specifier String</h2>
    <p>
      Generated by <code><a href="https://github.com/glimmerjs/resolution-map-builder/blob/ffda9adbd97fcb0b9d4b5ccdf517359848cfada1/lib/get-module-specifier.js#L3">getModuleSpecifier</a></code>.
    </p>
    <pre>{{specifier}}</pre>
  </section>
  <section>
    <h2>Specifier Object</h2>
    <p>
     Generated by <code><a href="https://github.com/glimmerjs/glimmer-di/blob/v0.2.0/src/specifier.ts#L56">deserializeSpecifier</a></code>.
    </p>
    <pre>{{specifierJSON}}</pre>
  </section>
  <footer>
    <a href="https://github.com/tomdale/glimmer-di-inspector">GitHub - tomdale/glimmer-di-inspector</a>
  </footer>
</div>
